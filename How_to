choice = st.selectbox("Try a preset (or choose 'Custom'):", ["Custom"] + list(PRESETS.keys()))
if choice != "Custom":
    user_text = PRESETS[choice]
else:
    user_text = st.text_area("Your text:", placeholder="Write how you would respond if a stranger sent you a friend request...")
